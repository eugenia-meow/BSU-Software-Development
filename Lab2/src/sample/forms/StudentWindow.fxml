<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="220.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/10.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.StudentWindowController">
   <children>
      <Button fx:id="buttonRegister" layoutX="15.0" layoutY="182.0" mnemonicParsing="false" onAction="#onRegister" text="Register for Courses">
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor></Button>
      <HBox layoutX="15.0" layoutY="14.0" prefHeight="150.0" prefWidth="370.0" style="-fx-border-width: 1px; -fx-border-color: gray;">
         <children>
            <ImageView fitHeight="150.0" fitWidth="150.0" pickOnBounds="true" preserveRatio="true" />
            <AnchorPane prefHeight="151.0" prefWidth="218.0">
               <children>
                  <Label fx:id="labelName" layoutX="11.0" layoutY="14.0" text="Name">
                     <font>
                        <Font size="14.0" />
                     </font>
                  </Label>
                  <Label fx:id="labelInfo" layoutX="11.0" layoutY="34.0" text="Info" />
               </children>
            </AnchorPane>
         </children>
      </HBox>
      <Button fx:id="buttonViewGrades" layoutX="145.0" layoutY="182.0" mnemonicParsing="false" onAction="#onViewGrades" text="View Grades">
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor></Button>
      <Button layoutX="323.0" layoutY="182.0" mnemonicParsing="false" onAction="#onSignOut" text="Sign Out">
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor></Button>
   </children>
</AnchorPane>
