<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.*?>
<?import java.lang.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.canvas.*?>
<?import javafx.scene.layout.*?>

<BorderPane minHeight="600.0" minWidth="800.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.Controller">
   <top>
      <MenuBar BorderPane.alignment="CENTER">
        <menus>
          <Menu mnemonicParsing="false" text="File">
            <items>
                  <MenuItem mnemonicParsing="false" text="New" />
                  <MenuItem mnemonicParsing="false" text="Save" />
              <MenuItem mnemonicParsing="false" text="Close" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Edit">
            <items>
              <MenuItem mnemonicParsing="false" text="Delete" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Help">
            <items>
              <MenuItem mnemonicParsing="false" text="About" />
            </items>
          </Menu>
        </menus>
      </MenuBar>
   </top>
   <bottom>
      <ToolBar prefHeight="40.0" prefWidth="200.0" BorderPane.alignment="CENTER">
        <items>
            <ColorPicker fx:id="strokePicker" promptText="Border Color">
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor>
               <tooltip>
                  <Tooltip text="Stroke" />
               </tooltip></ColorPicker>
            <ColorPicker fx:id="fillPicker" promptText="Fill Color">
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor>
               <tooltip>
                  <Tooltip text="Fill" />
               </tooltip></ColorPicker>
            <Separator prefHeight="31.0" prefWidth="11.0" />
            <TextField fx:id="lineWidthTf" alignment="CENTER_RIGHT" prefHeight="31.0" prefWidth="34.0" promptText="px" text="1">
               <tooltip>
                  <Tooltip text="Line Thickness (px)" />
               </tooltip>
            </TextField>
            <ComboBox fx:id="lineStyleCb" prefHeight="31.0" prefWidth="121.0" promptText="Line Style">
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor>
               <tooltip>
                  <Tooltip text="Line Style" />
               </tooltip></ComboBox>
            <Separator prefHeight="31.0" prefWidth="14.0" />
            <Label fx:id="coordLabel" alignment="CENTER_RIGHT" prefHeight="21.0" prefWidth="97.0" text="Coordinates" />
        </items>
      </ToolBar>
   </bottom>
   <left>
      <AnchorPane prefHeight="500.0" prefWidth="200.0" style="-fx-background-color: #eee;" BorderPane.alignment="CENTER">
         <children>
            <Button layoutX="14.0" layoutY="14.0" mnemonicParsing="false" onAction="#clear" text="Clear" />
            <GridPane layoutX="14.0" layoutY="172.0" prefHeight="249.0" prefWidth="174.0">
              <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                  <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
              </columnConstraints>
              <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                  <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
              </rowConstraints>
               <children>
                  <RadioButton fx:id="segmentRb" mnemonicParsing="false" onAction="#selectShape">
                     <toggleGroup>
                        <ToggleGroup fx:id="shape" />
                     </toggleGroup>
                     <cursor>
                        <Cursor fx:constant="HAND" />
                     </cursor>
                     <tooltip>
                        <Tooltip text="Segment" />
                     </tooltip>
                  </RadioButton>
                  <RadioButton fx:id="rayRb" mnemonicParsing="false" onAction="#selectShape" toggleGroup="$shape" GridPane.columnIndex="1">
                     <cursor>
                        <Cursor fx:constant="HAND" />
                     </cursor>
                     <tooltip>
                        <Tooltip text="Ray" />
                     </tooltip>
                  </RadioButton>
                  <RadioButton fx:id="lineRb" mnemonicParsing="false" onAction="#selectShape" toggleGroup="$shape" GridPane.columnIndex="2">
                     <cursor>
                        <Cursor fx:constant="HAND" />
                     </cursor>
                     <tooltip>
                        <Tooltip text="Line" />
                     </tooltip>
                  </RadioButton>
               </children>
            </GridPane>
         </children>
      </AnchorPane>
   </left>
   <center>
      <AnchorPane style="-fx-background-image: url(&quot;file:res/bg.png&quot;); -fx-border-style: solid; -fx-border-width: 2; -fx-border-color: #bbb;" BorderPane.alignment="CENTER">
         <children>
            <Canvas fx:id="canvas" height="500.0" onMouseClicked="#addPoint" onMouseMoved="#showCursorCoord" style="-fx-effect: dropshadow(gaussian, rgba(0,0,0,0.5), 10, 0, 1, 1);" width="580.0" AnchorPane.leftAnchor="5.0" AnchorPane.topAnchor="5.0">
               <cursor>
                  <Cursor fx:constant="CROSSHAIR" />
               </cursor>
            </Canvas>
         </children>
      </AnchorPane>
   </center>
</BorderPane>
