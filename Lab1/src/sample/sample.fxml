<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.*?>
<?import java.lang.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.canvas.*?>
<?import javafx.scene.layout.*?>

<BorderPane minHeight="600.0" minWidth="800.0" style="-fx-background-color: gray;" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.Controller">
   <top>
      <MenuBar BorderPane.alignment="CENTER">
        <menus>
          <Menu mnemonicParsing="false" text="File">
            <items>
              <MenuItem mnemonicParsing="false" text="Close" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Edit">
            <items>
              <MenuItem mnemonicParsing="false" text="Delete" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Help">
            <items>
              <MenuItem mnemonicParsing="false" text="About" />
            </items>
          </Menu>
        </menus>
      </MenuBar>
   </top>
   <bottom>
      <ToolBar prefHeight="40.0" prefWidth="200.0" BorderPane.alignment="CENTER">
        <items>
            <ColorPicker fx:id="strokePicker" promptText="Border Color">
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor>
               <tooltip>
                  <Tooltip text="Stroke" />
               </tooltip></ColorPicker>
            <ColorPicker fx:id="fillPicker" promptText="Fill Color">
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor>
               <tooltip>
                  <Tooltip text="Fill" />
               </tooltip></ColorPicker>
            <TextField fx:id="lineWidthTf" alignment="CENTER_RIGHT" prefHeight="31.0" prefWidth="34.0" promptText="px" text="1">
               <tooltip>
                  <Tooltip text="Line Thickness (px)" />
               </tooltip>
            </TextField>
            <ComboBox fx:id="lineStyleCb" prefWidth="150.0" promptText="Line Style">
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor>
               <tooltip>
                  <Tooltip text="Line Style" />
               </tooltip></ComboBox>
            <Label fx:id="coordLabel" text="Coordinates" />
        </items>
      </ToolBar>
   </bottom>
   <left>
      <AnchorPane prefHeight="500.0" prefWidth="200.0" style="-fx-background-color: #eee;" BorderPane.alignment="CENTER">
         <children>
            <Button layoutX="14.0" layoutY="14.0" mnemonicParsing="false" text="Clear" />
            <RadioButton fx:id="segmentRb" layoutX="14.0" layoutY="77.0" mnemonicParsing="false" onAction="#selectShape" text="Segment">
               <toggleGroup>
                  <ToggleGroup fx:id="shape" />
               </toggleGroup>
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor>
            </RadioButton>
            <RadioButton fx:id="rayRb" layoutX="14.0" layoutY="108.0" mnemonicParsing="false" onAction="#selectShape" text="Ray" toggleGroup="$shape">
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor></RadioButton>
            <RadioButton fx:id="lineRb" layoutX="14.0" layoutY="139.0" mnemonicParsing="false" onAction="#selectShape" text="Line" toggleGroup="$shape">
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor></RadioButton>
         </children>
      </AnchorPane>
   </left>
   <center>
      <AnchorPane BorderPane.alignment="CENTER">
         <children>
            <Canvas fx:id="canvas" height="523.0" onMouseClicked="#addPoint" onMouseMoved="#showCursorCoord" width="600.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
               <cursor>
                  <Cursor fx:constant="CROSSHAIR" />
               </cursor>
            </Canvas>
         </children>
      </AnchorPane>
   </center>
</BorderPane>
